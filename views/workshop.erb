<div id="app">

	 <div class="row">
        <div class="col s12 m8 offset-m2">
          <div class="card darken-1">
            <div class="card-content">
              <span class="card-title">Title: <%= @workshop %></span>
              <p>Workshop: <%= @workshop %> <br>
              	 Description: <%= @description %>.</p>
            </div>
              <div class="card-action">
                <a href="/<%= @workshop %>/edit" class="waves-effect waves-teal teal white-text btn-flat">Edit Feed</a>
                <form action="/delete/<%= @workshop %>" method="post" class="waves-effect waves-teal btn-flat red lighten-2 white-text">
          					<input type="hidden" name="_method" value="delete">
          					<input type="submit" name="delete" value="Delete Feed"> 
        				</form>
              </div>
          </div>
        </div>
    </div>

</div>

	